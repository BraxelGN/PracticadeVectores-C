#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	int vNumeroPares[100];
	int i;
	for (i=0; i<=100;i++)
	{
		if(i%2==0)
		{
			vNumeroPares[i]=i;
		}
	}
	printf("NUMEROS PARES:\n");
	for(i=0;i<=100;i++){
		if(i%2==0)
		printf("%d\n", vNumeroPares[i] );
	}
	return 0;
}
